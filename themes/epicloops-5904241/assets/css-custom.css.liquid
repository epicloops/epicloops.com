/* General
------------------------------------------------------------- */
body {
    padding-top: 50px;
    font-family:  Source Sans Pro, sans-serif;
    background-color: #fff;
    background: url('{{ 'png-bg.png' | asset_url | remove_first: 'https:' | remove_first: 'http:' }}') 0% 0% repeat;
}


/* Navbar
------------------------------------------------------------- */
a.navbar-brand {
/*     TODO: why does img within a tag add 2px of padding?
       Causes navbar to grow from 50px to 52px and throws off
       dropdown alignment.*/
    padding-top: 14px;
    padding-bottom: 14px;
}

.navbar-collapse {
  text-align: center;
}

/* Search box */

.navbar form.search {
    margin-top: 13px;
    margin-bottom: 13px;
}

.navbar form.search .form-group {
    position: relative;
}

.navbar form.search span {
    position: absolute;
    top: 4px;
    right: 5px;
    color: #333;
}

.navbar form.search input {
    transition: background-color 0.5s ease;
    background-color: #999;
    height: 24px;
    width: 100px;
    padding: 1px 25px 1px 10px;
    border: 2px solid #333;
  -webkit-border-radius: 20px;
     -moz-border-radius: 20px;
          border-radius: 20px;
}

.navbar form.search input::-webkit-input-placeholder {
    color: #c7c7c7;
}
.navbar form.search input::-moz-placeholder {
    color: #c7c7c7;
}
.navbar form.search input:-moz-placeholder {   /* Older versions of Firefox */
    color: #c7c7c7;
}
.navbar form.search input:-ms-input-placeholder {
    color: #c7c7c7;
}

.navbar form.search input:focus {
    background-color: #fff;
}


/* Cart & Account */

.navbar .glyphicon {
    padding-right: 20px;
}

.navbar .dropdown-menu {
    padding: 15px;
    min-width: 250px;
}


/* Slideshow
------------------------------------------------------------- */
.carousel {
    height: 500px;
    margin-bottom: 50px;
    background: url({{ 'png-slider-bg.png' | asset_url }}) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

.carousel-inner.container {
    width: 100% !important;
    height: 500px;
    background: url({{ 'png-slider-shadow.png' | asset_url }}) 0 0 repeat-x;
}

.carousel-control {
    background-image: none !important; /* remove background gradients on controls */
}

.carousel .item {
    padding: 100px 0;
}

.carousel .thumbnail {
    height: auto; /* height is determined by width which maxes out at 300px */
    width: 100%;
    max-width: 300px;
    margin-bottom: 0;
}

.carousel .item-image img {
    width: 100%;
}

.carousel-control .glyphicon {
    color: #222;
}

.carousel .carousel-indicators {
    margin-bottom: 0;
    bottom: -14px;
}

.carousel .carousel-indicators li {
    pointer-events: none;
    text-indent: 0;
    padding: 3px 0 0 0;
    margin: 0 0 0 3px;
    background-color: #fff;
    font-family: Source Sans Pro, sans-serif;
    font-size: 14px;
    font-weight: 900;
    color: #333;
    width: 15px;
    height: 15px;
    text-align: center;
    border-radius: 100px;
    box-shadow: #333 0 3px 0 inset, #333 0 -3px 0 inset, #333 3px 0 0 inset, #333 -3px 0 0 inset;
    border: 2px solid #fff;
    -moz-transition: all 0.2s linear 0s;
    -webkit-transition: all 0.2s linear 0s;
    -o-transition: all 0.2s linear 0s;
}

.carousel .carousel-indicators li.active {
    background-color: #333;
    color: #fff;
    box-shadow: none;
}

.carousel .item-title a {
    color: #fff;
    padding: 0 10px;
    font-family: Source Sans Pro, sans-serif;
    font-size: 20px;
    font-weight: 200;
    background-color: #333;
    float: left;
}

.carousel .item-title a:hover {
    background-color: #222;
    text-decoration: none;
}


