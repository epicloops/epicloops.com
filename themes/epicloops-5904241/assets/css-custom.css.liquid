/* Footer
------------------------------------------------------------- */
.footer {
    margin-top: 50px;
    padding: 50px 0 30px 0;
    background: #222 url({{ 'png-main-footer-bg-1.png' | asset_url }}) top left repeat-x;
    border-top: 1px solid #fff;
    color: #999;
    font-size: 14px;
}

.footer a {
    color: #999;
    -moz-transition: all 0.2s linear 0s;
    -webkit-transition: all 0.2s linear 0s;
    -o-transition: all 0.2s linear 0s;
    -webkit-transform-style: preserve-3d;
}

.footer a:hover {
    color: #fff;
    text-decoration: none;
}

.main-footer {
    padding: 0 0 75px 0;
    background: url({{ 'png-border-3.png' | asset_url }}) bottom center no-repeat;
}

.main-footer .main-title {
    background: url({{ 'png-spacer-1-329px.png' | asset_url }}) bottom left repeat-x;
    color: #e2e2e2;
    font-size: 18px;
    padding: 10px 0;
}

.main-footer > .row {
    padding-bottom: 50px;
}


/* Navigation */

.main-footer .navigation ul {
    list-style: none;
    margin-left: 0;
    padding-left: 0;
}


/* Twitter */

.main-footer .twitter a {
  text-decoration: underline;
}


/* Newsletter */

.main-footer .newsletter {
  position: relative;
}

.main-footer .newsletter .fa-envelope {
  color: #222;
  position: absolute;
  left: 20px;
  bottom: 8px;
}

.main-footer .newsletter form input[type=text],
.main-footer .newsletter form input[type=password] {
    font-size: 12px;
    border: none;
    padding: 7px 10px 6px 10px;
    margin: 0;
    box-shadow: none;
    -moz-transition: all 0.2s linear 0s;
    -webkit-transition: all 0.2s linear 0s;
    -o-transition: all 0.2s linear 0s;
    background: #999 url({{ 'ico-email-1.png' | asset_url }}) 10px 10px no-repeat;
}

.main-footer .newsletter form input[type=text]:focus,
.main-footer .newsletter form input[type=password]:focus {
    border: none;
    background-color: #fff;
}

.main-footer .newsletter form input[type=text]::-webkit-input-placeholder {
    color: #c7c7c7;
}
.main-footer .newsletter form input[type=text]::-moz-placeholder {
    color: #c7c7c7;
}
.main-footer .newsletter form input[type=text]:-moz-placeholder {   /* Older versions of Firefox */
    color: #c7c7c7;
}
.main-footer .newsletter form input[type=text]:-ms-input-placeholder {
    color: #c7c7c7;
}


/* About */

.main-footer .cards,
.main-footer .social {
    padding: 10px 0;
}

.main-footer .social a {
    margin: 0 6px 0 0;
}

.main-footer .cards {
  margin: 0 auto;
  width: 145px;
}

.main-footer .cards a {
    width: 20px;
    height: 15px;
    margin: 0 7px 0 2px;
    display: block;
    float: left;
    -moz-transition: all 0.15s linear 0s;
    -webkit-transition: all 0.15s linear 0s;
    -o-transition: all 0.15s linear 0s;
}

.main-footer .cards a:hover {
    background-position: 0 -15px;
}

.main-footer .cards .visa {
    background: url({{ 'card-visa-1.png' | asset_url }}) 0 0 no-repeat;
}

.main-footer .cards .mastercard {
    background: url({{ 'card-mastercard-1.png' | asset_url }}) 0 0 no-repeat;
}

.main-footer .cards .paypal {
    background: url({{ 'card-paypal-1.png' | asset_url }}) 0 0 no-repeat;
}

.main-footer .cards .discover {
    background: url({{ 'card-discover-1.png' | asset_url }}) 0 0 no-repeat;
}

.main-footer .cards .americanexpress {
    background: url({{ 'card-americanexpress-1.png' | asset_url }}) 0 0 no-repeat;
}

.main-footer .cards .google {
    background: url({{ 'card-google-1.png' | asset_url }}) 0 0 no-repeat;
}



/* Media Queries
-------------------------------------------------------------
Extra small devices (phones, less than 768px)
No media query since this is the default in Bootstrap
*/

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {
  .navbar-nav>li>a {
      padding-left: 10px;
      padding-right: 10px;
  }

  .navbar-collapse {
      text-align: left;
  }

  .main-footer .newsletter form input[type=text],
  .main-footer .newsletter form input[type=password] {
    padding: 7px 10px 6px 33px;
  }

  .main-footer .cards {
      margin: 0;
      width: auto;
  }

}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {
  .navbar form.search input {
    width: 175px;
  }
}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
  .container {
    width: 970px;
  }
}
